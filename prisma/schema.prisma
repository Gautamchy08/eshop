generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model images {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  file_id String
  url     String
  userId  String? @unique @db.ObjectId
  shopId  String? @unique @db.ObjectId

  products   products? @relation(fields: [productsId], references: [id])
  productsId String?   @db.ObjectId

  users users? @relation(fields: [userId], references: [id])
  shops shops? @relation(fields: [shopId], references: [id], onDelete: Cascade)
}

model users {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String        @unique
  password    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  images      images?
  shopReviews shopReviews[]
}

model shopReviews {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating    Float
  reviews   String?
  shopId    String   @db.ObjectId
  shop      shops    @relation(fields: [shopId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model shops {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  bio           String?
  category      String
  coverBanner   String?
  address       String
  opening_hours String?
  website       String?
  social_links  Json[]
  rating        Float?        @default(0)
  reviews       shopReviews[]
  image         images?
  sellerId      String        @unique @db.ObjectId
  seller        sellers       @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  products      products[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model sellers {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String   @unique
  phone_number String
  country      String
  password     String?
  stripeId     String?
  shop         shops?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  shopId       String?  @db.ObjectId
}

// site config

model site_config {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  categories    String[]
  subCategories Json
}

model discount_codes {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  public_name   String
  discountType  String
  discountValue Int
  discountCode  String @unique
  sellerId      String @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProductStatus {
  active
  draft
  pending
}

model products {
  id                    String        @id @default(auto()) @map("_id") @db.ObjectId
  title                 String
  slug                  String        @unique
  category              String
  subCategory           String
  short_description     String
  detailed_description  String
  images                images[]
  video_url             String?
  tags                  String[]
  brand                 String?
  colors                String[]
  sizes                 String[]
  starting_date         DateTime?
  ending_date           DateTime?
  stock                 Int
  sale_price            Float
  regular_price         Float
  rating                Float         @default(0)
  totalSales            Int           @default(0)
  warranty              String?
  custom_specifications Json?
  custom_properties     Json
  isDeleted             Boolean       @default(false)
  cash_on_delivery      String
  discount_codes        String[]      @db.ObjectId
  status                ProductStatus @default(active)
  sellerId              String        @db.ObjectId
  shopId                String        @db.ObjectId
  shops                 shops         @relation(fields: [shopId], references: [id])
  deletedAt             DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
